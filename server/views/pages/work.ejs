<!doctype html>
<html lang="en">

<%- include('../partials/head', { title: 'Project â€” Jinsu Kim' }) %>

    <body class=" work-page">
        <%- include('../partials/navigation') %>

            <main class="work-page-list">
                <ul class="work-list">
                    <% (posts || []).filter(function(post){ if (!post) return false; var category=post.category;
                        if(Array.isArray(category)) return category.includes('work'); return category==='work' ;
                        }).forEach(function(post){ %>
                        <li class="work-list__item items-responsive">
                            <div class="work-list__item items-responsive__primary">
                                <a class="work-list__item-link button size-m type-void" href="/posts/<%= post.slug %>">
                                    <%= post.title %>
                                </a>
                                <p class="work-list__item-summary">
                                    <%= post.summary %>
                                </p>
                            </div>
                            <div class="work-list__item-date items-responsive__secondary">
                                <small>
                                    <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric' ,
                                        month: 'short' }) %>
                                </small>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </main>

            <%- include('../partials/footer') %>
    </body>


</html>