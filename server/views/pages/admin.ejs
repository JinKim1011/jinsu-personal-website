<!doctype html>
<html lang="en">

<%- include('../partials/head', { title: 'Admin â€” Jinsu Kim' }) %>


    <body class=" admin-page">
        <%- include('../partials/navigation') %>
            <main class="admin-page-list items-responsive">
                <div class="admin-page-edit-list items-responsive__primary">
                    <div class="blog-section-admin">
                        <a class="button size-l type-void" href="/blog">
                            Blog
                        </a>
                        <ul class="blog-list">
                            <% (posts || []).filter(function(p){ if (!p) return false; var cat=p.category;
                                if(Array.isArray(cat)) return cat.includes('blog'); return cat==='blog' ;
                                }).forEach(function(post){ %>
                                <li class="blog-list__item">
                                    <a class="blog-list__item-link button size-m type-void"
                                        href="/posts/<%= post.slug %>/edit">
                                        <%= post.title %>
                                    </a>
                                    <p class="blog-list__item-summary">
                                        <%= post.summary %>
                                    </p>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <div class="work-section-admin">
                        <a class="button size-l type-void" href="/work">
                            Work
                        </a>
                        <ul class="work-list">
                            <% (posts || []).filter(function(p){ if (!p) return false; var cat=p.category;
                                if(Array.isArray(cat)) return cat.includes('work'); return cat==='work' ;
                                }).forEach(function(post){ %>
                                <li class="work-list__item">
                                    <a class="work-list__item-link button size-m type-void"
                                        href="/posts/<%= post.slug %>/edit">
                                        <%= post.title %>
                                    </a>
                                    <p class="work-list__item-summary">
                                        <%= post.summary %>
                                    </p>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>
                <div class="items-responsive__secondary">
                    <a class="button size-m type-fill bold" href="/posts/new">New Post</a>
                </div>
            </main>

            <%- include('../partials/footer') %>
    </body>


</html>